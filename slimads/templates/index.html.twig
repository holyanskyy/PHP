{# empty Twig template #}
{% extends "master.html.twig"%}

{% block title %}All ads{% endblock %}

{% block content %}
    
<a href="/postad"> Post an Ad </a>

{% if adList %}
    <table border="1">
        <tr>
            <th>ID</th>
            <th>Message</th>
            <th>Price</th>
            <th>Contact email:</th>
             <th>Operations</th>
        </tr>

        {% for ad in adList %}
            <tr>
                <td>{{ ad['ID'] }}</td>
                <td>{{ ad.msg }}</td>
                <td>{{ ad.price }}</td>
                <td>{{ ad.contactEmail }}</td>
                 <td><a href='/postad/{{ad.ID}}' >Edit</a></td>
            </tr>
        {% endfor %}

    </table>
{% else %}

    <p>There are no adds yet</p>

{% endif %}

{% endblock %}


